<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Extraordinariadas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary branding color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary branding color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnTertiary">@color/colorSuave</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/colorFondo</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#000000</item>
    </style>
</resources>
