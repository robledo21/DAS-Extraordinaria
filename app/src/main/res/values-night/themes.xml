<!-- res/values-night/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Extraordinariadas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary branding color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary branding color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnTertiary">@color/colorSuaveDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorAccent</item>

        <item name="android:navigationBarColor">@color/colorAccent</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/colorFondoDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="Theme.Extraordinariadas.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="backgroundColor">@color/colorSuaveDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>
</resources>
